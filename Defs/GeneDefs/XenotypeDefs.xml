<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
		<!-- Human Xenotype -->
	
		<XenotypeDef MayRequire = "Ludeon.RimWorld.Biotech">
			<defName>Tensura_Human</defName>
			<label>Human</label>
			<description>This pawn is considered to be a human.</description>
			<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
			
			<combatPowerFactor>0.1</combatPowerFactor>
			<inheritable>true</inheritable>
			<factionlessGenerationWeight>0</factionlessGenerationWeight>
			
			<genes>
				<li>Tensura_Human_Gene</li>
			</genes>
		</XenotypeDef>
		
		
		<!-- Otherworlder Xenotype -->
	
		<XenotypeDef MayRequire = "Ludeon.RimWorld.Biotech">
			<defName>Tensura_Xeno_Otherworlder</defName>
			<label>Otherworlder</label>
			<description>This pawn comes from another rim and was summoned or reincarnated.</description>
			<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
			
			<combatPowerFactor>0.1</combatPowerFactor>
			<inheritable>true</inheritable>
			<factionlessGenerationWeight>0</factionlessGenerationWeight>
			
			<genes>
				<li>Tensura_Gene_Otherworlder</li>
			</genes>
		</XenotypeDef>
		
		
		<!-- Slime Xenotype -->
	
		<XenotypeDef MayRequire = "Ludeon.RimWorld.Biotech">
			<defName>Tensura_Slime</defName>
			<label>Slime</label>
			<description>This pawn morphed into a slime with custom body.</description>
			<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
			
			<combatPowerFactor>0.1</combatPowerFactor>
			<inheritable>true</inheritable>
			<factionlessGenerationWeight>0</factionlessGenerationWeight>
			
			<genes>
				<li>Tensura_BodySwitch_Slime</li>
				<li>Tensura_Gene_Slime_Head</li>
				<li>Tensura_Gene_Slime_Body</li>
			</genes>
		</XenotypeDef>
		
		
		<!-- Slime Race + Body -->
		
		<XenotypeDef MayRequire = "Ludeon.RimWorld.Biotech">
			<defName>Tensura_Xeno_Slime</defName>
			<label>Slime</label>
			<description>This xenotype is a slime with custom body.</description>
			<iconPath>RaceTextures/Slime/Slime_Body_south</iconPath>
			
			<combatPowerFactor>0.1</combatPowerFactor>
			<inheritable>true</inheritable>
			<factionlessGenerationWeight>1</factionlessGenerationWeight>
			
			<genes>
				<li>Tensura_Gene_Slime_Head</li>
				<li>Tensura_Gene_Slime_Body</li>			
			</genes>
			<modExtensions>
			<!-- This makes the game toggle to your race when the pawn is spawned in as a new creature. It does not require any special genes to do so. -->
				<li Class="BetterPrerequisites.XenotypeExtension">
					<setRace>Tensura_Race_Slime</setRace>
					<!-- If set to true it will also be able to force itself over other races, such as HAR races. -->
					<forceRace>true</forceRace>
				</li>
			</modExtensions>
		</XenotypeDef>
		
		
		<!-- Rimuru + Body -->
		
		<XenotypeDef MayRequire = "Ludeon.RimWorld.Biotech">
			<defName>Tensura_Xeno_Rimuru</defName>
			<label>Rimuru Tempest</label>
			<description>This is Rimuru Tempest, a slime with custom body.</description>
			<iconPath>RaceTextures/Slime/Rimuru_Body</iconPath>
			
			<combatPowerFactor>0.1</combatPowerFactor>
			<inheritable>true</inheritable>
			<factionlessGenerationWeight>0</factionlessGenerationWeight>
			
			<genes>
				<li>Tensura_Gene_Slime_Head</li>
				<li>Tensura_Gene_Rimuru_Body</li>			
			</genes>
			<modExtensions>
			<!-- This makes the game toggle to your race when the pawn is spawned in as a new creature. It does not require any special genes to do so. -->
				<li Class="BetterPrerequisites.XenotypeExtension">
					<setRace>Tensura_Race_Slime</setRace>
					<!-- If set to true it will also be able to force itself over other races, such as HAR races. -->
					<forceRace>true</forceRace>
				</li>
			</modExtensions>
		</XenotypeDef>


</Defs>
