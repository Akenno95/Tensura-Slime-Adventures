<Defs>

		
		<!-- Races and more -->
		
		<!-- Otherworlder -->
		
		<HediffDef ParentName="DiseaseBase">
			<defName>Tensura_Otherworlder</defName>
			<label>Otherworlder</label>
			<description>This pawn comes from another rim and was summoned or reincarnated.</description>
			<isBad>false</isBad>
			<everCurableByItem>false</everCurableByItem>
			<initialSeverity>1</initialSeverity>
			<maxSeverity>10</maxSeverity>
			<comps>
				 <li Class="EBSGFramework.HediffCompProperties_TemporaryGenes">
					<genesAtSeverities>
						<li>
							<genes>
								<li>Isekai_Resistances_Gene</li>
								<li>Isekai_Body_Gene</li>
								<li>Isekai_Magic_Gene</li>
							</genes>
							<minSeverity>0</minSeverity>
						</li>
					</genesAtSeverities>
				 </li>
			</comps>
			<stages>
				<li>
					<label>Summoned</label>			
				</li>
				<li>
					<minSeverity>2</minSeverity>
					<label>Stray</label>
				</li>
				<li>
					<minSeverity>3</minSeverity>
					<label>Reincarnated</label>
				</li>
			</stages>
			
			
		</HediffDef>
		
		
		<!-- Slime -->
		
		<HediffDef ParentName="DiseaseBase">
			<defName>Tensura_Morph_Slime</defName>
			<label>Slime morphing</label>
			<description>Morphing into a slime...</description>
			<isBad>false</isBad>
			<everCurableByItem>false</everCurableByItem>
			<initialSeverity>1</initialSeverity>
			<comps>
            <li Class="EBSGFramework.HediffCompProperties_AlterXenotype">
                <xenotypes>
                    <Tensura_Slime>1</Tensura_Slime>
                </xenotypes>
				<severities>1~999</severities>
				<setXenotype>False</setXenotype>
            </li>
        </comps>
			<stages>
			</stages>
			
			
		</HediffDef>
		
		
